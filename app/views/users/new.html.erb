<div class = "row">
	<div class="span6 offset3">
		<h2>Регистрация</h2>
		<%= form_for(@user) do |f| %>
			<%= render 'shared/error_messages' %>

			<%= f.label :name, "Имя" %>
			<%= f.text_field :name %>

			<%= f.label :email, "Электронный адрес" %>
			<%= f.text_field :email %>

			<%= f.label :password, "Пароль" %>
			<%= f.password_field :password %>

			<%= f.label :password_confirmation, "Подтверждение пароля" %>
			<%= f.password_field :password_confirmation %>

			<%= f.submit "Зарегестрироваться", class: "btn btn-large btn-primary" %>

		<% end %>
	</div>
</div>